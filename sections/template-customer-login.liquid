<div class="h-full flex items-center justify-center py-12 px-6 md:px-4 lg:px-4" x-data="{ loginForm: true, pwRecoverForm:false }">
    <div class="max-w-md w-full space-y-8" x-show="loginForm">
        <div>
            <h1 class="text-center text-3xl font-bold mt-6">Sign in to your account</h1>
        </div>
        <div class="mt-8">
            {% form 'customer_login' %}
                {% if form.errors %}
                    <div class="relative border-border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
                        <strong class="font-bold">Error!</strong>
                        <p class="block sm:inline">{{ form.errors | default_errors }}</p>
                    </div>
                {% endif %}
                <div class="my-2">
                    <label class="sr-only" for="email_address">Email Address</label>
                    <input autocomplete="email" class="relative block w-full px-3 py-2 border" id="email_address" name="customer[email]" placeholder="Email Address" type="email">
                </div>
                {% if form.password_needed %}
                    <div class="my-2">
                        <label class="sr-only" for="password">Password</label>
                        <input autocomplete="current-password" class="relative block w-full px-3 py-2 border" id="password" name="customer[password]" placeholder="Password" type="password">
                    </div>
                {% endif %}
                <div class="my-2 text-sm">
                    <a class="underline text-gray-500 hover:text-gray-900" href="#" x-on:click="loginForm = false; pwRecoverForm = true">Forgot Password</a>
                </div>
                <div class="">
                    <button class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900" type="submit">Sign In</button>
                </div>
            {% endform %}
        </div>
        {% if shop.checkout.guest_login %}
            <hr class="my-12">
            <div class="">
                <h1 class="mt-6 text-center text-3xl font-bold"></h1>
            </div>

            {% form 'guest_login' %}
                <div class="">
                    <button class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900" type="submit">Continue as Guest </button>
                </div>
            {% endform %}
        {% endif %}

    </div>
    <div class="max-w-md w-full space-y-8" x-show="pwRecoverForm">
        <div>
            <h1 class="text-center text-3xl font-bold mt-6">Recover Your Password</h1>
        </div>
        <div class="mt-8">
            {% form 'recover_customer_password' %}
                {% if form.errors %}
                    <div class="relative border-border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
                        <strong class="font-bold">Error!</strong>
                        <p class="block sm:inline">{{ form.errors | default_errors }}</p>
                    </div>
                {% endif %}
                <div class="my-2">
                    <label class="sr-only" for="email">Email Address</label>
                    <input autocomplete="email" class="relative block w-full px-3 py-2 border" id="email" name="email" placeholder="Email Address" type="email">
                </div>

                <div class="">
                    <button class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900" type="submit">Recover Password</button>
                </div>
                <div class="mt-8 text-sm">
                    <a class="underline text-gray-500 hover:text-gray-500" href="#" x-on:click="loginForm = true; pwRecoverForm = false">Back To Login</a>
                </div>
            {% endform %}
        </div>
    </div>
</div>