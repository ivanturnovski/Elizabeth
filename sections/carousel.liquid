<div class="min-h-screen bg-gray-300 text-white flex items-center justify-center" x-data="carouselFilter()">
    <div class="container grid grid-cols-1">
        <div class="flex py-12 justify-center">
            <a :class="{ 'text-gray-800': active != 0 }" @click.prevent="changeActive(0)" class="px-2 text-lg uppercase font-bold tracking-widest hover:text-white" href="#">Carousel</a>
        </div>

        <div class="row-start-2 col-start-1" x-show="active == 0" x-transition:enter-end="opacity-100 transform scale-100" x-transition:enter-start="opacity-0 transform scale-90" x-transition:enter="transition ease-out duration-300" x-transition:leave-end="opacity-0 transform scale-90" x-transition:leave-start="opacity-100 transform scale-100" x-transition:leave="transition ease-in duration-300">
            <div class="grid grid-cols-1 grid-rows-1" x-data="carousel()" x-init="init()">
                <div class="col-start-1 row-start-1 relative z-20 flex items-center justify-center pointer-events-none">
                    {% for block in section.blocks %}
					{% assign item_title = block.settings.title %}					
						 <h1 class="absolute text-5xl uppercase font-black tracking-widest" x-show="active == {{ forloop.index0 }}" x-transition:enter-end="opacity-100 transform translate-y-0" x-transition:enter-start="opacity-0 transform translate-y-12" x-transition:enter="transition ease-out duration-300" x-transition:leave-end="opacity-0 transform -translate-y-12" x-transition:leave-start="opacity-100 transform translate-y-0" x-transition:leave="transition ease-out duration-300">{{ item_title }}</h1>
					
                    {% endfor %}
                </div>
                <div class="carousel col-start-1 row-start-1" x-ref="carousel">
                    {% for block in section.blocks %}
                        {% assign item = block.settings.carousel_image %}
                        <div class="w-3/5 px-2">
                            <img loading="lazy" src="{{ item | image_url }}">
                        </div>
                    {% endfor %}
                </div>

            </div>
        </div>
    </div>
</div>
{% schema %}

{
    "name": "Carousel",
    "blocks": [
        {
            "type": "image",
            "name": "Image",
            "settings": [
                {
                    "type": "text",
                    "id": "title",
                    "label": "Image"
                }, {
                    "type": "image_picker",
                    "id": "carousel_image",
                    "label": "Carousel Image"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Carousel"
        }
    ]
}

{% endschema %}