<div class="container mx-auto">
    {% paginate search.results by 10 %}
        <h1 class="text-xl my-4 text-center">Search Results</h1>
        <div class="flex justify-center items-center">
            <form action="{{ routes.search_url }}" method="get" class="border flex rounded">
                <input type="search" name="q" placeholder="Search" value="{{ search.terms | escape }}" class="px-3 py-3 w-80 border-none">
                <button class="bg-gray-900 hover:bg-gray-700 text-white border px-4" type="submit">
                    Search
                </button>
            </form>
        </div>
        {% if search.performed %}
            {% if search.results.size > 0 %}
                <div class="max-w-6xl mx-auto">
					<div class="text-gray-500 text-center my-10">
						{{ search.results.size }} results for the search term {{ search.terms | escape }}
					</div>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        {% for item in search.results %}
                            {% case item.object_type %}
                                {% when 'product' %}
                                    {% render 'product-card', product: item %}
                                {% else %}
                            {% endcase %}
                        {% endfor %}
                    </div>
                </div>

            {% else %}
                <div class="text-center my-4">
                    <p>No Results Found for the search term:
                        {{ search.terms | escape }}.
                    </p>
                </div>
            {% endif %}
        {% endif %}


        {% render 'pagination', pagination: paginate %}
    {% endpaginate %}
</div>