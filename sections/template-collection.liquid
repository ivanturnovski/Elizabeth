<div class="px-4 py-8">
    {% paginate collection.products by 6 %}
        <h1 class="text-3xl text-center">{{ collection.title }}</h1>
        <div class="max-w-6xl mx-auto">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                {% for product in collection.products %}
                    <div class="w-full py-6 py-3">
                        <div class="border bg-white shadow-lg rounded-lg overflow-hidden">
                            <a href="{{ product.url }}">
                                {% if product.featured_image %}
                                    <div class="overflow-hidden">
                                        <img class="w-full h-full object-cover" src="{{ product.featured_image | img_url: '350x' }}" alt="{{ product.featured_image.alt }}">
                                    </div>
                                {% else %}
                                    {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-500' }}
                                {% endif %}
                            </a>
                            <div class="flex flex-col p-4">
                                <span class="text-sm">{{ product.vendor }}</span>
                                <a href="{{ product.url }}" class="text-gray-700 uppercase font-medium">{{ product.title }}</a>
                                <p class="text-gray-500">{{ product.price | money }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        {% render 'pagination', pagination: paginate %}
    {% endpaginate %}
</div>